<?xml version="1.0" ?>
<project name="Mesh Shader Test" >
	<assets>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>		

		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value = "60"/>
				<NEAR value= "1"/>
				<FAR value= "100"/>
               <POSITION x="0.460277" y="-0.0375654" z="1.76627" w="1" />
                <VIEW x="-0.095234" y="0.0245173" z="-0.995153" w="0" />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x="-2" y="-1" z="-2" />
				<COLOR r="0.9" g="0.9" b="0.9" />
			</light>
		</lights>
	
        <materialLibs>
            <materialLib filename="meshShader.mlib"/>
        </materialLibs>
	</assets>
	
    <pipelines>
		<pipeline name="mesh" default="true">
			<pass class="mesh" name="pass1">
                <material name="meshShader" fromLibrary="Mesh" dim=1 />
                <viewport name="MainViewport" />
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
			</pass>
		</pipeline>
	</pipelines>
</project>